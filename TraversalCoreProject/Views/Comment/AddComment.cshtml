<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2"> Yorum Yapın! </h4>
    <p class="mb-4">
        E-mail adresinin paylaşılmayacaktır ve zorunlu Alanları Doldurunuz *
    </p>
    <form method="post" asp-action="AddComment" asp-controller="Comment">

        <div class="form-group">
            <textarea name="CommentContent" class="form-control" placeholder="Yorum*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="CommentUser" class="form-control" placeholder="İsim Soyisim*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="text" name="DestinationID" class="form-control" placeholder="Hangi Rotaya Yorum Yapıyorsunuz*" required="">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap </button>
        </div>
    </form>
</div>
